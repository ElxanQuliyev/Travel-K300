@{
    ViewBag.Title = "Home Page";
}
@using TravelK300.Models
@model TravelK300.ViewModel.homeVm

<section id="MainSlider">
    <div class="container-fluid p-0">
        <div class="mainSlider-all">
            @foreach (TopSlider sld in Model.topSlider)
            {
                <div class="mainSlider-box">
                    <img style="width:100%;object-fit:cover" class="img-fluid" src="@sld.SliderPhoto" />
                    <div class="slider-texts ">
                        <h6 data-aos="fade-right">@sld.Header</h6>
                        <h2 data-aos="fade-left">@sld.Description</h2>
                        <a href="#" data-aos="fade-right" class="hoverBtn">Get in Touch</a>
                    </div>
                </div>
            }


        </div>
    </div>
</section>





<section id="Slider">
    <div class="container">
        <div class="slider-all">
            <div class="slider-boxes row justify-content-center">
                <div data-aos="fade-up" data-aos-duration="1000" class="slider-box">
                    <div class="slider-img">
                        <a href="visit.html"><img class="img-fluid" src="~/PublicFront/image/cta-1-368x420.jpg" alt=""></a>
                    </div>
                    <div class="slider-txt">
                        <a href="">
                            <h4>Balloon Flights</h4>
                        </a>
                    </div>
                </div>
                <div data-aos="fade-down" data-aos-duration="1000" class="slider-box">
                    <div class="slider-img">
                        <a href="visit.html"><img class="img-fluid" src="~/PublicFront/image/cta-2-368x420.jpg" alt=""></a>
                    </div>
                    <div class="slider-txt">
                        <a href="#">
                            <h4>Mountain Holiday</h4>
                        </a>
                    </div>
                </div>
                <div data-aos="fade-up" data-aos-duration="1000" class="slider-box">
                    <div class="slider-img">
                        <a href="visit.html"><img class="img-fluid" src="~/PublicFront/image/cta-3-368x420.jpg" alt=""></a>
                    </div>
                    <div class="slider-txt">
                        <a href="">
                            <h4>Beach Holidays</h4>
                        </a>
                    </div>
                </div>
            </div>
            <div class="slider-arrow text-center">
                <a href="collage.html">
                    Other Tours <img style="width: 2%;margin-left: 5px;" src="~/PublicFront/image/right-arrow.png"
                                     alt="">
                </a>
            </div>
        </div>
    </div>
</section>





<!-- Discover - Start  -->

<section id="Discover">
    <div class="container">
        <div class="disc-all row">
            <div data-aos="fade-right" data-aos-duration="1000" class="col-md-12 col-lg-6 text-center">
                <img class="img-fluid" src="~/PublicFront/image/disc-aze.jpg" alt="">
            </div>
            <div data-aos="fade-left" data-aos-duration="1000" class="disc-right col-md-12 col-lg-6"
                 style="padding-top: 3rem;padding-left: 3rem;">
                <a href="visit.html">
                    <h2 style="font-size: 49px;line-height: 1.2; font-weight:600; margin-bottom: 20px;">Discover Azerbaijan</h2>
                </a>
                <div class="tab row justify-content-between" style="border-bottom: 2px solid transparent;margin: 0;">
                    @foreach (DiscoverRight dis in Model.disRight)
                    {
                        <button style="background: transparent;font-size: 18px;border: none;letter-spacing: .1em;"
                                class="active   p-0 tablinks" onclick="openCity(event, 'd@(dis.Id)')">
                            @dis.Header
                        </button>
                    }


                </div>
                @{ 
                    int discount = 0;
                }
                @foreach (DiscoverRight di in Model.disRight)
                {
                    <div id="d@(di.Id)" style="@(discount!=0 ? "display:none":"")" class="tabcontent pt-3">
                        <p>
                           @di.Description
                        </p>
                    </div>
                    discount++;
                }


                <div class="disc-btn">
                    <a class="btn1" href="contact.html">Get in Touch</a>
                    <a class="btn2" href="about.html">Read More</a>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Discover - End  -->
<!-- Services - Start  -->

<section id="Services">
    <div class="container">
        <h3>Our Services</h3>
        <div class="services-all row justify-content-center">
            @foreach (Service item in Model.services)
            {
                <div data-aos="fade-right" data-aos-duration="1000" class="service-box row">
                    <div class="col-md-3">
                        <a href="services.html">
                            <img style="width: 80%; margin-left: 15px" src="@item.IconPhoto" alt=""
                                 srcset="">
                        </a>
                    </div>
                    <div class="col-md-9">
                        <a href="services.html">
                            <h4>@item.Header</h4>
                        </a>
                        <a href="services.html">
                            <p>
                                @item.Description
                            </p>
                        </a>
                    </div>
                </div>

            }

        </div>
    </div>
</section>



<!-- Services - End  -->
<!-- Tours - Start -->

<section id="Tours">
    <div class="container">
        <div class="tours-all">
            <h3>Hot Tours</h3>
            @foreach (AllTour tour in Model.tourlist)
            {
                <div class="tour-box mt-5 row">
                    <div data-aos="fade-right" data-aos-duration="1000" class="col-md-6 tour-img p-0">
                        <img style="width:100%" src="@tour.Photo" alt="">
                    </div>
                    <div data-aos="fade-left" data-aos-duration="1000" class="col-md-6 tour-right">
                        <div class="tour-right-text">
                            <a href="">@tour.Header</a>
                            <br>
                            <a style="text-decoration: none; color: #fbb901; font-size: 18px;" href="">4 customer reviews</a>
                            <p style="margin-bottom: 40px;margin-top: 10px;color: #9b9b9b;letter-spacing: .025em;">
                             @tour.Description
                            </p>
                        </div>
                        <a href="@Url.Action("TourDetail","Home",new { id=tour.Id})" class="tourBtn">Buy This Tour</a>
                        <div class="tour-price">
                            <p>@tour.Price Azn</p>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>



<!-- Tours - End -->


<section id="Person">
    <div class="container">
        <h3 data-aos="fade-down" data-aos-duration="1000"
            style="font-weight: 600; text-align: center;margin-bottom: 4rem; font-size: 36px; color: #162e44; line-height: 1.2;">
            Different People - One Mission
        </h3>
        <div class="row row-30 justify-content-center box-ordered">
            @foreach (OurTeam team in Model.ourteam)
            {
                <div data-aos="fade-up" data-aos-duration="1000" class="col-sm-6 col-md-5 col-lg-3">
                    <!-- Team Modern-->
                    <article class="team-modern">
                        <div class="team-modern-header">
                            <a class="team-modern-figure" href="#">
                                <img class="img-circles"
                                     src="@team.Photo" alt="" width="118" height="118" />
                            </a>
                            <svg x="0px" y="0px" width="270px" height="70px" viewbox="0 0 270 70" enable-background="new 0 0 270 70"
                                 xml:space="preserve">
                            <g>
                            <path fill="#161616"
                                  d="M202.085,0C193.477,28.912,166.708,50,135,50S76.523,28.912,67.915,0H0v70h270V0H202.085z"></path>
                </g>
              </svg>
                        </div>
                        <div class="team-modern-caption text-center mt-2">
                            <h6 class="team-modern-name"><a href="#">@team.Name</a></h6>
                            <p style="color: #fbb901;font-size: 15px" class="team-modern-status">@team.WorkerArea</p>
                        </div>
                    </article>
                </div>
            }
        </div>
    </div>
</section>


<section id="Booking" style=" --myback:url(@Model.moreinfo.Photo)">
    <div class="container">
        <div class="booking-all">
            <h3 data-aos="fade-right" data-aos-duration="1000">@Model.moreinfo.Header <br> are Waiting for You!</h3>
            <p data-aos="fade-left" data-aos-duration="1000">
                @Model.moreinfo.Description
            </p>
            <a data-aos="fade-up" data-aos-duration="1000" href="hotels.html">Get More Information</a>
        </div>
    </div>
</section>


<section id="GalleryIndex">
    <div class="container-fluid">
        <h3 style="text-align: center; font-size: 15px;">GALLERY</h3>
        <div class="gallery-all">
            @foreach (Gallery gl in Model.galleries)
            {
                <a href="hotels.html">
                    <div class="gallery-box">
                        <div class="gallery-img">
                            <img class="img-fluid" src="@gl.Photo" alt="">
                        </div>
                    </div>
                </a>
            }
        </div>
    </div>
</section>




<div id="myModal" class="modal">
    <span class="close">&times;</span>
    <img class="modal-content" id="img01">
    <div id="caption"></div>
</div>




